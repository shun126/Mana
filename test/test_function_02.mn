int test_sort(short array[10], int size)
{
	print("before\n");

	for(int i = 0; i < size; i++)
	{
		array[i] = size - i;
		print("%d: %d\n", i, array[i]);
	}
	print("-----\n");

	int count = 0;
	int finish;
	do{
		finish = true;
		for(int i = 0; i < size - 1; i++)
		{
			if(array[i] > array[i + 1])
			{
				print("%d <-> %d\n", array[i], array[i+1]);

				short tmp = array[i];
				array[i] = array[i + 1];
				array[i + 1] = tmp;
				finish = false;
			}
		}
		count++;

		for(int i = 0; i < size; i++)
		{
			print("%d: %d\n", i, array[i]);
		}
		print("%d----\n", count);
	}while(!finish);

	print("after\n");
	for(int i = 0; i < size; i++)
	{
		print("%d: %d\n", i, array[i]);
	}

	return count;
}

